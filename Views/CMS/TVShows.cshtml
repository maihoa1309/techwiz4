@using StreamTrace.Repository;
@inject IContentRepository contentRepository
@{
    ViewData["Title"] = "TVShows";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    var contents = await contentRepository.GetContentByType("tvshow");
}
<head>
    <style>
        /* Tùy chỉnh giao diện CSS ở đây */
        .table-container {
            background-color: #f8f9fa;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0px 2px 10px rgba(0, 0, 0, 0.1);
        }

            .table-container h2 {
                margin-bottom: 20px;
            }

        .table {
            font-size: 14px;
        }

            .table th, .table td {
                vertical-align: middle;
            }

            .table th {
                background-color: #343a40;
                color: #fff;
                border: none;
            }

            .table a {
                color: #007bff;
            }
    </style>
</head>
<body>
    halo
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-10 table-container">
                <h2>TV Show List</h2>
                <div class="d-grid gap-2 d-md-block mb-3">
                    <button class="btn btn-success" id="addButton" type="button">Add New</button>
                </div>
                @await Component.InvokeAsync("showDataAdmin", new { item = contents, type = "tvshow"})
            </div>
        </div>
    </div>

    <!-- Link tới các script cần thiết, bao gồm Bootstrap JS và jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script>
        document.getElementById("addButton").addEventListener("click", function () {
            window.location.href = "AddOrUpdateTVShow";
        });
        document.getElementById("editButton").addEventListener("click", function () {
            window.location.href = "AddOrUpdateTVShow";
        });
        //document.getElementById("deleteButton").addEventListener("click", function () {
        //    window.location.href = "AddOrUpdateTVShow";
        //});
    </script>
</body>
